<!DOCTYPE html>
@*Bootstrap template that defines overall look and feel of website*@
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Starter</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_NavBar") @* Include the HTML used to display Navigation Bar *@
    <div class="container body-content">
        @RenderBody() @*What we put into views*@
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jacob Storer was here.</p> @* Signature *@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
